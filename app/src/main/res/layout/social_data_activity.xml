<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Your Social Existence"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/snapchat"
        android:hint="Snapchat Username"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_textColorHint="#fff"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="20dp"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_default_user"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/facebook"
        android:hint="Facebook Username"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_textColorHint="#fff"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="20dp"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_default_user"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/instagram"
        android:hint="Instagram Username"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_textColorHint="#fff"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="20dp"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_default_user" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/linkedin"
        android:hint="Linked In Username"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_textColorHint="#fff"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="20dp"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_default_user" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit_button"
            android:layout_marginTop="18dp"
            android:text="Submit"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>
